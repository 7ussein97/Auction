@model Auction.Models.AuctionItem
@{
    ViewData["Title"] = "Create Auction";
}

<div class="row mb-4">
    <div class="col-12 text-center">
        <h1 class="display-4 mb-3">
            <i class="fas fa-plus-circle text-success me-3"></i>
            Create New Auction
        </h1>
        <p class="lead">List your item and start receiving bids from interested buyers</p>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-lg-10">
        <div class="card shadow">
            <div class="card-header text-white" style="background: linear-gradient(135deg, #1a237e 0%, #3949ab 100%);">
                <h3 class="mb-0">
                    <i class="fas fa-edit me-2"></i>Auction Details
                </h3>
            </div>
            <div class="card-body p-4">
                <form asp-action="Create" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="All" class="alert alert-danger" role="alert">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        Please correct the errors below
                    </div>

                    <div class="row">
                        <div class="col-md-12 mb-4">
                            <label asp-for="Name" class="form-label fw-bold">
                                <i class="fas fa-tag me-2 text-primary"></i>Item Name <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Name" class="form-control form-control-lg" placeholder="Enter item name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="col-md-12 mb-4">
                            <label asp-for="Description" class="form-label fw-bold">
                                <i class="fas fa-align-left me-2 text-primary"></i>Description
                            </label>
                            <textarea asp-for="Description" class="form-control" rows="5" placeholder="Provide a detailed description of your item..."></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                            <small class="form-text text-muted">
                                <i class="fas fa-info-circle me-1"></i>Include key features, condition, and any relevant details
                            </small>
                        </div>
                    </div>

                    <hr class="my-4">

                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <label for="mainImage" class="form-label fw-bold">
                                <i class="fas fa-image me-2 text-primary"></i>Main Image
                            </label>
                            <input type="file" id="mainImage" name="mainImage" class="form-control" accept="image/*" />
                            <small class="form-text text-muted mt-1">
                                <i class="fas fa-info-circle me-1"></i>Upload the primary image for your auction item
                            </small>
                        </div>

                        <div class="col-md-6 mb-4">
                            <label for="additionalImages" class="form-label fw-bold">
                                <i class="fas fa-images me-2 text-primary"></i>Additional Images
                            </label>
                            <input type="file" id="additionalImages" name="additionalImages" class="form-control" accept="image/*" multiple />
                            <small class="form-text text-muted mt-1">
                                <i class="fas fa-info-circle me-1"></i>You can upload multiple images (optional)
                            </small>
                        </div>
                    </div>

                    <hr class="my-4">

                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <label asp-for="MinimumPrice" class="form-label fw-bold">
                                <i class="fas fa-money-bill-wave me-2 text-primary"></i>Minimum Price (OMR)
                            </label>
                            <div class="input-group input-group-lg">
                                <span class="input-group-text bg-light">
                                    <i class="fas fa-coins text-primary"></i>
                                </span>
                                <input asp-for="MinimumPrice" class="form-control" type="number" step="0.01" min="0" placeholder="0.00" />
                            </div>
                            <span asp-validation-for="MinimumPrice" class="text-danger"></span>
                            <small class="form-text text-muted mt-1">
                                <i class="fas fa-info-circle me-1"></i>Starting bid amount in Omani Rial
                            </small>
                        </div>
                    </div>

                    <hr class="my-4">

                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <label asp-for="StartTime" class="form-label fw-bold">
                                <i class="fas fa-play-circle me-2 text-success"></i>Start Time <span class="text-danger">*</span>
                            </label>
                            @{
                                var startTimeValue = Model != null && Model.StartTime != default(DateTime) 
                                    ? Model.StartTime.ToString("yyyy-MM-ddTHH:mm") 
                                    : DateTime.Now.ToString("yyyy-MM-ddTHH:mm");
                            }
                            <input asp-for="StartTime" class="form-control form-control-lg" type="datetime-local" value="@startTimeValue" required />
                            <span asp-validation-for="StartTime" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-4">
                            <label asp-for="EndTime" class="form-label fw-bold">
                                <i class="fas fa-stop-circle me-2 text-warning"></i>End Time <span class="text-danger">*</span>
                            </label>
                            @{
                                var endTimeValue = Model != null && Model.EndTime != default(DateTime) 
                                    ? Model.EndTime.ToString("yyyy-MM-ddTHH:mm") 
                                    : DateTime.Now.AddDays(7).ToString("yyyy-MM-ddTHH:mm");
                            }
                            <input asp-for="EndTime" class="form-control form-control-lg" type="datetime-local" value="@endTimeValue" required />
                            <span asp-validation-for="EndTime" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                        <a asp-action="Index" asp-controller="Home" class="btn btn-outline-secondary btn-lg me-md-2">
                            <i class="fas fa-times me-2"></i>Cancel
                        </a>
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-check me-2"></i>Create Auction
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

