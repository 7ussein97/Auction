@model IEnumerable<Auction.Models.AuctionItem>
@{
    ViewData["Title"] = "All Auctions";
}

<div class="row mb-5">
    <div class="col-12 text-center">
        <h1 class="display-4 mb-3">
            <i class="fas fa-list-alt text-primary me-3"></i>
            All Auctions
        </h1>
        <p class="lead">Browse through all available auction items - active, upcoming, and completed</p>
        <div class="mt-3">
            <span class="badge bg-primary rounded-pill px-3 py-2">
                <i class="fas fa-layer-group me-2"></i>Complete Catalog
            </span>
            <span class="badge bg-info rounded-pill px-3 py-2 ms-2">
                <i class="fas fa-history me-2"></i>All Statuses
            </span>
        </div>
    </div>
</div>

@if (Model == null || !Model.Any())
{
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="alert alert-info text-center" role="alert">
                <div class="mb-3">
                    <i class="fas fa-inbox fa-3x"></i>
                </div>
                <h4 class="alert-heading">No Auctions Available</h4>
                <p class="mb-3">There are currently no auctions in the system. New items are added regularly!</p>
                <hr>
                <p class="mb-0">
                    @if (User.Identity.IsAuthenticated && (User.IsInRole("Admin") || User.IsInRole("AuctionCreator")))
                    {
                        <a href="@Url.Action("Create", "Auction")" class="btn btn-primary">
                            <i class="fas fa-plus-circle me-2"></i>Create New Auction
                        </a>
                    }
                    else
                    {
                        <text>Check back soon or contact us to list your items.</text>
                    }
                </p>
            </div>
        </div>
    </div>
}
else
{
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="text-muted mb-0">
                    <i class="fas fa-layer-group me-2"></i>
                    Showing @Model.Count() @(Model.Count() == 1 ? "auction" : "auctions")
                </h5>
                <div class="btn-group" role="group">
                    <button type="button" class="btn btn-outline-primary btn-sm">
                        <i class="fas fa-filter me-1"></i>Filter
                    </button>
                    <button type="button" class="btn btn-outline-primary btn-sm">
                        <i class="fas fa-sort me-1"></i>Sort
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        @foreach (var auction in Model)
        {
            var highestBid = auction.Bids?.OrderByDescending(b => b.Amount).FirstOrDefault();
            var currentBid = highestBid?.Amount ?? auction.MinimumPrice ?? 0;
            var imagePath = !string.IsNullOrEmpty(auction.ImagePath) 
                ? auction.ImagePath 
                : (auction.Images?.FirstOrDefault()?.ImagePath ?? "https://via.placeholder.com/400x300?text=No+Image");
            var timeRemaining = auction.EndTime - DateTime.Now;
            var isActive = auction.IsActive && DateTime.Now >= auction.StartTime && DateTime.Now <= auction.EndTime;
            var bidCount = auction.Bids?.Count() ?? 0;

            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100 shadow-sm position-relative">
                    @if (isActive && timeRemaining.TotalHours < 24)
                    {
                        <div class="position-absolute top-0 end-0 m-2">
                            <span class="badge bg-danger rounded-pill">
                                <i class="fas fa-bolt me-1"></i>Ending Soon
                            </span>
                        </div>
                    }
                    else if (!isActive)
                    {
                        <div class="position-absolute top-0 end-0 m-2">
                            <span class="badge bg-secondary rounded-pill">
                                <i class="fas fa-hourglass-end me-1"></i>@(DateTime.Now < auction.StartTime ? "Upcoming" : "Ended")
                            </span>
                        </div>
                    }

                    @if (bidCount > 0)
                    {
                        <div class="position-absolute top-0 start-0 m-2">
                            <span class="badge bg-dark bg-opacity-75 rounded-pill">
                                <i class="fas fa-users me-1"></i>@bidCount @(bidCount == 1 ? "bid" : "bids")
                            </span>
                        </div>
                    }

                    <div class="overflow-hidden" style="height: 220px;">
                        <img src="@imagePath"
                             class="card-img-top"
                             alt="@auction.Name"
                             style="height: 220px; object-fit: cover;"
                             onerror="this.onerror=null; this.src='https://via.placeholder.com/400x300?text=No+Image'">
                    </div>

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title d-flex align-items-center">
                            <i class="fas fa-tag me-2 text-muted" style="font-size: 0.9rem;"></i>
                            @auction.Name
                        </h5>

                        <p class="card-text text-muted flex-grow-1">
                            @if (!string.IsNullOrEmpty(auction.Description))
                            {
                                @(auction.Description.Length > 120 ? auction.Description.Substring(0, 120) + "..." : auction.Description)
                            }
                            else
                            {
                                <em><i class="fas fa-info-circle me-1"></i>No description available</em>
                            }
                        </p>

                        <div class="mb-3 p-3 rounded" style="background: linear-gradient(135deg, #e3f2fd 0%, #bbdefb 100%);">
                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-muted">Current Bid</small>
                                @if (isActive)
                                {
                                    <i class="fas fa-circle text-success" style="font-size: 0.5rem;" title="Live Auction"></i>
                                }
                            </div>
                            <strong class="text-primary fs-5">
                                <i class="fas fa-money-bill-wave me-1"></i>
                                @currentBid.ToString("N2") OMR
                            </strong>
                        </div>

                        @if (isActive)
                        {
                            <div class="mb-3 d-flex align-items-center">
                                <i class="fas fa-clock me-2 text-warning"></i>
                                <small class="text-muted">
                                    @if (timeRemaining.TotalDays > 1)
                                    {
                                        <span><strong>@((int)timeRemaining.TotalDays)</strong> days remaining</span>
                                    }
                                    else if (timeRemaining.TotalHours > 1)
                                    {
                                        <span><strong>@((int)timeRemaining.TotalHours)</strong> hours remaining</span>
                                    }
                                    else if (timeRemaining.TotalMinutes > 0)
                                    {
                                        <span class="text-warning fw-bold">
                                            <strong>@((int)timeRemaining.TotalMinutes)</strong> minutes remaining!
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-danger fw-bold">
                                            <i class="fas fa-exclamation-triangle me-1"></i>Ending now!
                                        </span>
                                    }
                                </small>
                            </div>
                        }
                        else
                        {
                            <div class="mb-3 d-flex align-items-center">
                                <i class="fas fa-hourglass-end me-2 text-danger"></i>
                                <small class="text-danger fw-bold">
                                    @(DateTime.Now < auction.StartTime ? "Starts soon" : "Auction ended")
                                </small>
                            </div>
                        }

                        <a href="@Url.Action("Details", "Auction", new { id = auction.Id })"
                           class="btn btn-primary mt-auto w-100">
                            <i class="fas fa-eye me-2"></i>
                            View Details
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}

